{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug sh_baker",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/sh_baker_main",
            "args": [
                "--input",
                "data/Sponza/scene.gltf",
                "--output",
                "baked",
                "--width",
                "512",
                "--height",
                "512",
                "--samples",
                "32",
                "--supersample_scale",
                "1",
                "--dilation",
                "0",
                "--luminance_only",
                "--debug_output",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}